
{
  "manifest_version": 3,
  "name": "Croi - LinkedIn Post Saver",
  "version": "1.0.0",
  "description": "Save and organize LinkedIn posts with AI-powered tagging",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "alarms"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://*.supabase.co/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"],
      "css": ["content-styles.css"]
    },
    {
      "matches": ["https://nudl.lovable.app/*", "https://*.lovable.app/*"],
      "js": ["dashboard-content-script.js"]
    }
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Croi - LinkedIn Post Saver"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "content-styles.css"],
      "matches": ["https://www.linkedin.com/*"]
    }
  ]
}
